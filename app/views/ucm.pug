extends layout
include components/visibility-select

block title
  title ♨ | うちまガチャ

append styles
  link(href='/css/navbar-fixed-top.css', rel='stylesheet')
  link(
    rel='stylesheet'
    href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.2/css/bootstrap-select.min.css'
  )
    
block body
  +navbar('ucm')
  .container
    .jumbotron
      h1 うちまガチャ
      p うんこちんこまんこ
      form(action='/ucm/post', method='post')
        .form-group
          +visibility-select('visibility', visibility)
          .form-group
            button.btn.btn-lg.btn-primary(type='submit', name='num', value='1') 1回ガチャ
            button.btn.btn-lg.btn-warning(type='submit', name='num', value='10') 10連ガチャ
            button.btn.btn-lg.btn-danger(type='submit', name='num', value='40') 40連ガチャ

append scripts
  script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.2/js/bootstrap-select.min.js')
